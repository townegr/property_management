<%= simple_form_for @building_record do |f| %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :state, label: 'State', collection: [
    'AL', 'AK', 'AZ', 'AR', 'CA', 'CO', 'CT',
    'DE', 'FL', 'GA', 'HI', 'ID', 'IL', 'IN',
    'IA', 'KS', 'KY', 'LA', 'ME', 'MD', 'MA',
    'MI', 'MN', 'MS', 'MO', 'MT', 'NE', 'NV',
    'NH', 'NJ', 'NM', 'NY', 'NC', 'ND', 'OH',
    'OK', 'OR', 'PA', 'RI', 'SC', 'SD', 'TN',
    'TX', 'UT', 'VT', 'VA', 'WA', 'WV', 'WI',
    'WY'
    ] %>
  <%= f.input :postal_code, label: 'Postal Code' %>
  <%= f.input :description %>
  <%= f.association :owner, label_method: :full_name %>
  <%= f.submit 'Submit' %>
<%- end -%>
